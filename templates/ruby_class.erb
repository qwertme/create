class <%=mandatory :name%><% optional(:parent) { |parent|%> < <%= parent %><% } %>
<%
  optional(:variables) do |variables|
    instance_variables = variables.split(',') %>
  def initialize(<%= variables %>)
<% instance_variables.each { |var| %><%="    @#{var} = #{var}\n"%><%}%>
  end
<% end %>
end
